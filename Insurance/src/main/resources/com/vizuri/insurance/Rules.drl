rule "enableQ18"
dialect "mvel"
no-loop true
agenda-group "question-display"
when
	applicant : Applicant( fraud == true ) 
	question : Question(Id == 18)
then
	question.setEnabled( true );
	update( question );
end

rule "disableQ18"
dialect "mvel"
no-loop true
agenda-group "question-display"
when
	applicant : Applicant( fraud == false ) 
	question : Question(Id == 18)
then
	question.setEnabled( false );
	update( question );
end

